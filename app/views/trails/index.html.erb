<p id="notice"><%= notice %></p>

<h1>Listing Trails</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Name</th>
      <th>Unique</th>
      <th>Directions</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
        <td><%= trail.city %></td>
        <td><%= trail.state %></td>
        <td><%= trail.country %></td>
        <td><%= trail.name %></td>
        <td><%= trail.unique_id %></td>
        <td><%= trail.directions %></td>
        <td><%= trail.lat %></td>
        <td><%= trail.lon %></td>
        <td><%= trail.activity %></td>
        <td><%= link_to 'Show', trail %></td>
        <td><%= link_to 'Edit', edit_trail_path(trail) %></td>
        <td><%= link_to 'Destroy', trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

